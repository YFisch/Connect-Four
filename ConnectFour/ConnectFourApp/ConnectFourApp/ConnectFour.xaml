                        <GradientStop Color="Yellow" Offset=".5"/>
                    </LinearGradientBrush>
                </Border.Background>
            <Button x:Name="StartBtn" Margin="10" Text="Start" Style="{StaticResource Key=start}" Clicked="StartBtn_Clicked"/>
            </Border>
            <RadioButton Content="2 Player" Grid.Column="1" Grid.Row="0" IsChecked="True"/>
            <RadioButton x:Name="PlayAgainstComputerRb" Content="Play Against the Computer" Grid.Column="2" Grid.Row="0"/>
